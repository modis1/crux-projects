<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	onLoad="numberTextBoxController.onLoad" 	
	useController="numberTextBoxController" 
	title="${messages_numberTextBox.title}">

	<center>
		<crux:styledPanel id="wrapper">
			<gwt:HTMLPanel id="mainPanel" styleName="center">
				<gwt:label id="labelText" text="${messages_numberTextBox.labelText}" />
				<br />
				<crux:numberTextBox id="boxNumber" maxLength="5"
					value="44" />
				<hr />
				<gwt:label id="labelMaxlength" text="${messages_numberTextBox.labelMaxlength}" />
				<br />
				<gwt:HTMLPanel id="panelBoard" styleName="radioPanel">
					<crux:storyboard id="radios" height="20px" width="100%"
						largeDeviceItemWidth="85px">
						<gwt:radioButton id="radioButton09" name="value"
							text="${messages_numberTextBox.radioButton09}" onChange="numberTextBoxController.maxLength"/>
						<gwt:radioButton id="radioButton099" name="value"
							text="${messages_numberTextBox.radioButton099}" onChange="numberTextBoxController.maxLength" />
						<gwt:radioButton id="radioButton0999" name="value"
							text="${messages_numberTextBox.radioButton0999}" checked="true"
							onChange="numberTextBoxController.maxLength" />
						<gwt:radioButton id="radioButtonFree" name="value"
							text="${messages_numberTextBox.radioButtonFree}" onChange="numberTextBoxController.maxLength" />
					</crux:storyboard>
				</gwt:HTMLPanel>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="${messages_numberTextBox.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>