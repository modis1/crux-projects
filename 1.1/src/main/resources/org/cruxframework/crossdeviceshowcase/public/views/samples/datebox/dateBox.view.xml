<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="dateBoxController" 
	onLoad="dateBoxController.onLoad"
	title="${messages_datebox.title}">

	<center>
		<crux:styledPanel id="panel1">
			<gwt:HTMLPanel id="html">
				<crux:dateBox id="dateBox" pattern="dd/MM/yyyy" />
				<crux:button id="buttonValueDateBox"
					onSelect="dateBoxController.onClickButtonValueTextBox" text="${messages_datebox.printValue}"></crux:button>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="${messages_datebox.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>