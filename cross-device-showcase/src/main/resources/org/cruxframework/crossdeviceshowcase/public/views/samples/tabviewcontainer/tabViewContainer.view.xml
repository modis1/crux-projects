<v:view xmlns="http://www.w3.org/1999/xhtml" xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="tabViewContainerController"
	title="${messages_tabViewContainer.title}">

	<center>
		<gwt:HTMLPanel id="panel">
			<crux:tabViewContainer id="tabView" width="700px">
				<crux:view name="messageBox" closeable="true" />
			</crux:tabViewContainer>
			
			<crux:button id="buttonRemove" text="${messages_tabViewContainer.buttonRemove}" onSelect="tabViewContainerController.remove" />
			
			<br/>
			
			<gwt:label id="labelText" text="${messages_tabViewContainer.labelText}" />
			<gwt:label id="labelUrl" text="${messages_tabViewContainer.labelUrl}" />
			
			<gwt:textBox id="textBoxUrl" width="300px" text="${messages_tabViewContainer.textBoxUrl}" />
			
			<crux:button id="buttonAddURL" text="${messages_tabViewContainer.buttonAddURL}" onSelect="tabViewContainerController.add" />
			
			<br/>
			
            <crux:button id="buttonAddViewMessageBox" text="${messages_tabViewContainer.buttonAddViewMessageBox}" onSelect="tabViewContainerController.addViewMessageBox" />
            <crux:button id="buttonAddViewDialogBox" text="${messages_tabViewContainer.buttonAddViewDialogBox}" onSelect="tabViewContainerController.addViewDialogBox" />
            <crux:button id="buttonAddViewProgressBox" text="${messages_tabViewContainer.buttonAddViewProgressBox}" onSelect="tabViewContainerController.addViewProgressBox" />
			
		</gwt:HTMLPanel>

		<showcase:info title="${messages_tabViewContainer.title}">
			<showcase:description>
				<gwt:label id="labelDescText" text="${messages_tabViewContainer.labelDescText}" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>