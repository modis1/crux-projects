<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	title="${messages_views.storeTitle}">

	<center>
		<gwt:HTMLPanel id="parentPanel" height="200px" width="600px">
			<gwt:HTMLPanel id="panelLabel" styleName="topMenuDisposalPanelLeft">
				<gwt:label id="labelTitle" text="${messages_views.storeTitle}" styleName="topMenuDisposalTitle"/>
			
				<gwt:HTMLPanel id="panelForm" >
				<gwt:label id="labelInfo" text="${messages_views.storeLabelInfo}" styleName="topMenuDisposalInfo"/>
				<br />
				<crux:formDisplay id="formSearch">				
				</crux:formDisplay>
				</gwt:HTMLPanel>
			</gwt:HTMLPanel>
			
			<br />
			<crux:styledPanel id="panelList" styleName="topMenuDisposalPanelList">
				<gwt:label id="labelSearch" text="${messages_views.storesFound}" styleName="topMenuDisposalListInactive"/>
			</crux:styledPanel>
		</gwt:HTMLPanel>

	</center>

</v:view>