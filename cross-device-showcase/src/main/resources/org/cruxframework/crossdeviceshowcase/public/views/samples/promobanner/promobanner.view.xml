<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	useController="mainController"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	title="PromoBanner"> 

	<center>
			<crux:promoBanner id="promobanner" largeBannersHeight="312px" smallBannersHeight="150px" autoTransitionInterval="5000" >
			<crux:banner buttonLabel="2" title="2" text="2" image="img/banner2.jpg"/>
			<crux:banner buttonLabel="1" title="1" text="1" image="img/banner1.jpg"/>
			<crux:banner buttonLabel="3" title="3" text="3" image="img/banner3.jpg"/>
			</crux:promoBanner>

		<showcase:info title="PromoBanner">
			<showcase:description>
				<p>
				PromoBanner é um componente para promover algo: um produto, uma ideia, um assunto, entre outros.
				</p> 	
				<p>
				Pode ser adaptado para o uso em dispositivos grandes como desktops e pequenos como celulares. Possui vários recursos como:
				transição automática de uma imagem para outra com determinação de intervalo, programação do tempo de transição, botão para eventos e muito mais.
				</p> 			
			</showcase:description>
		</showcase:info>
		
	</center>		
	
</v:view>