<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="timerController" 
	onLoad="timerController.onLoad" 
	title="${messages_timer.title}">

	<center>
		<crux:styledPanel id="wrapper">
			<gwt:HTMLPanel id="parentPanel">
				<gwt:HTMLPanel id="timerPanel" styleName="timerPanel">
					<crux:timer id="timer" initial="0" start="false"/>
				</gwt:HTMLPanel>
				<br />
				<gwt:HTMLPanel id="panelButtons">
					<gwt:horizontalPanel id="buttonsPanel">
						<crux:button id="buttonStart" text="${messages_timer.buttonStart}"
							onSelect="timerController.start" />
						<crux:button id="buttonStop" text="${messages_timer.buttonStop}"
							onSelect="timerController.stopAndRestart" />
						<crux:button id="buttonClear" text="${messages_timer.buttonClear}"
							onSelect="timerController.clear" />
					</gwt:horizontalPanel>
				</gwt:HTMLPanel>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="${messages_timer.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>