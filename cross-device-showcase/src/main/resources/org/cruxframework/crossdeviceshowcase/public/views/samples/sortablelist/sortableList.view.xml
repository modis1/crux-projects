<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="sortableListController" 
	onLoad="sortableListController.onLoad"
	title="${messages_sortableList.title}"> 
	
	<center>
		<crux:styledPanel id="panle">
			<crux:sortableList id="sortableList" header="Atividades do dia" width="500px">
				<crux:itemWidget>
					<gwt:label id="label1" text="A"/>
				</crux:itemWidget>
				<crux:itemWidget>
					<gwt:label id="labelB" text="B"/>
				</crux:itemWidget>
				<crux:itemWidget>
					<gwt:label id="labelC" text="C"/>
				</crux:itemWidget>
			</crux:sortableList>
		</crux:styledPanel>
		<gwt:textBox id="textBoxActivity" width="300px"/>
		<crux:button id="btnAddActivity" text="Adicionar" onSelect="sortableListController.addActivity"/>
		<crux:button id="btnRemoveActivity" text="Remover" onSelect="sortableListController.removeSelectedItem"/>
		
		<showcase:info title="${messages_sortableList.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>		
	
</v:view>