<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="dialogBoxController" title="${messages_dialogBox.title}"> 

	<center>

		<crux:styledPanel id="panel1">
			<crux:button id="showDialogBtn" text="${messages_dialogBox.showDialogBtn}"
				onSelect="dialogBoxController.openDialog" />
		</crux:styledPanel>

		<showcase:info title="${messages_dialogBox.title}">
			<showcase:description>
				<gwt:label id="labelDescText" text="${messages_dialogBox.labelDescText}" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>