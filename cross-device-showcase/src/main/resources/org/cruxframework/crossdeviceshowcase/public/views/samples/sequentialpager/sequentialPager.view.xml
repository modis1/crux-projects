<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useController="sequentialPagerController"
	useDataSource="discDS"
	onLoad="sequentialPagerController.onLoad"
	title="${messages_sequentialPager.title}"> 

	<center>
		<crux:adaptiveGrid id="grid" dataSource="discDS" pageSize="5" styleName="grid">
		 <crux:largeColumns>
		 <crux:dataColumn key="discName" label="Álbum" width="110px"/>
		<crux:dataColumn key="artistName" label="Artista" width="110px"/>
		 <crux:dataColumn key="releaseYear" label="Lançamento" width="110px"/>
		  <crux:dataColumn key="stock" label="Estoque" width="110px"/>
 		</crux:largeColumns>
		 <crux:smallColumns><crux:dataColumn key="artistName" label="Artista"/></crux:smallColumns>
		</crux:adaptiveGrid>
		<br />
		
		<crux:styledPanel id="panel">
			<crux:sequentialPager id="sequentialPager" pageable="grid"/>
		</crux:styledPanel>
	</center>

</v:view>