<v:view xmlns="http://www.w3.org/1999/xhtml" xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="topMenuDisposalController" 
	onLoad="topMenuDisposalController.onLoad"
	title="${messages_topMenuDisposal.title}">

	<center>
		<crux:styledPanel id="panel">
		 	<crux:topMenuDisposal id="menu" defaultView="topViewInit">
		 	<crux:menuEntry targetView="topViewInit" label="inicial"/>
		 	<crux:menuEntry targetView="maskedLabel" label="Masked Label"/>
		 	<crux:menuEntry targetView="textArea" label="Text Area"/>
		 	</crux:topMenuDisposal>
		</crux:styledPanel>
		
		<showcase:info title="${messages_topMenuDisposal.title}">
			<showcase:description>
				<gwt:label id="labelDescText"  text="${messages_topMenuDisposal.labelDescText}"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>