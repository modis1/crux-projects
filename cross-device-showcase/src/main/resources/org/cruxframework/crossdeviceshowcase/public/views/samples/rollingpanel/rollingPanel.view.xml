<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useResource="showcaseCoreResources"
	useController="rollingPanelController"
	onLoad="rollingPanelController.onLoad"
	title="RollingPanel"> 

	<center>
		<crux:styledPanel id="rollingPanel1">
			<gwt:flowPanel id="innerPanel1">
<!-- 				Inserting image widgets to the RollingPanel component -->
				<faces:label id="label1" text="This is a Image RollingPanel" style="margin-bottom:20px"/>
				<faces:rollingPanel id="rollingPanelImages"  height="200px" width="900px" tooltip="Sports">
					<faces:image id="baseball" url="${showcaseCoreResources.baseball}" altText="Baseball" />
					<faces:image id="basketball" url="${showcaseCoreResources.basketball}"/>
					<faces:image id="canoeing" url="${showcaseCoreResources.canoeing}"/>
					<faces:image id="football" url="${showcaseCoreResources.football}"/>
					<faces:image id="motocross" url="${showcaseCoreResources.motocross}"/>
					<faces:image id="running" url="${showcaseCoreResources.running}"/>
					<faces:image id="snowboard" url="${showcaseCoreResources.snowboard}"/>
					<faces:image id="soccerball" url="${showcaseCoreResources.soccerball}"/>
					<faces:image id="swimming" url="${showcaseCoreResources.swimming}"/>
					<faces:image id="volleyball" url="${showcaseCoreResources.volleyball}"/>
				</faces:rollingPanel>
			</gwt:flowPanel>
		</crux:styledPanel>
		
		<crux:styledPanel id="rollingPanel2" style="margin-top:50px">
			<gwt:flowPanel id="innerPanel2">
<!-- 				Inserting Personal widgets created to Sports Store for controller -->
				<faces:label id="label2" text="This is a Customized Component RollingPanel" style="margin-bottom:20px"/>
				<faces:rollingPanel id="rollingPanelCustomizedWidget" height="250px" width="900px" tooltip="Sports Store"/>
			</gwt:flowPanel>
		</crux:styledPanel>
		
<!-- 		Component description -->
		<showcase:info title="RollingPanel">
			<showcase:description>
				<gwt:HTML id="componentDescription" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>