<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	useController="dialogBoxController" title="Dialog Box"> 
	
	<center>
		<gwt:flowPanel id="panel">
			
			<gwt:label id="label" text="A DialogBox widget can handle from simple widgets to whole views!"/>
			<crux:button id="btn" text="Close Me" onSelect="dialogBoxController.closeDialog"/>		
		</gwt:flowPanel>
	</center>		
</v:view>