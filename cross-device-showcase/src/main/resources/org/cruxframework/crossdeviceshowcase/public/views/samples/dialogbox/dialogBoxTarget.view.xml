<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	useController="dialogBoxController" title="${messages_dialogBox.title}"> 

	<center>
		<gwt:flowPanel id="panel">

			<gwt:label id="label" text="${messages_dialogBoxTarget.label}" />
			<crux:button id="btn" text="${messages_dialogBoxTarget.btn}"
				onSelect="dialogBoxController.closeDialog" />
		</gwt:flowPanel>
	</center>
</v:view>