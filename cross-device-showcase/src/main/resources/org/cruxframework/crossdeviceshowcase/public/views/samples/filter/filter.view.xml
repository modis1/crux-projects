<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useController="filterController" 
	onLoad="filterController.onLoad"
	title="${messages_filter.title}"> 

	<center>
		<crux:styledPanel id="wrapper">
			<gwt:HTMLPanel id="wrapperChild" styleName="center">
				<gwt:label id="labelInsertText" text="${messages_filter.labelText}"/>
				<br />
				<crux:filter id="filterWidget" text="${messages_filter.caption}" animationEnabled="true" 
					autoSelectEnabled="true" focus="true" filterable="" width="200px" limit="2"/>
			</gwt:HTMLPanel>
		</crux:styledPanel>
		
		<showcase:info title="${messages_filter.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>