<v:view xmlns="http://www.w3.org/1999/xhtml" xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="textAreaController" onLoad="textAreaController.onLoad"
	title="Text Area">

	<center>
		<crux:styledPanel id="painel">
			<gwt:HTMLPanel id="StatesWrapper">
				<crux:formDisplay id="form">
					<crux:entry>
						<gwt:label id="label" text="Text Area with dynamic value length:" />
					</crux:entry>
					<crux:entry>
						<crux:textArea id="textArea" width="400px" visibleLines="8" focus="true" >
						Insert a new number on the input bellow and click 'Apply' to change my max-length.
	 					</crux:textArea>
					</crux:entry>
					<crux:entry>
						<gwt:HTMLPanel id="limitLengthWrapper" styleName="cf">
							<gwt:textBox id="textBox" width="50px" value="150" />
							<crux:button id="applyButton" text="Apply" onSelect="textAreaController.applyMaxLength" styleName="crux-Button rs-right" />
						</gwt:HTMLPanel>
					</crux:entry>		
				</crux:formDisplay>
				<hr />
				<h4>States:</h4>
				<div class="btn-Group">
					<gwt:radioButton name="color" onChange="textAreaController.handleDefault" id="default" text="Default" checked="true"></gwt:radioButton>
					<gwt:radioButton name="color" onChange="textAreaController.handleSuccess" id="success" text="Success"></gwt:radioButton>
					<gwt:radioButton name="color" onChange="textAreaController.handleWarning" id="warning" text="Warning"></gwt:radioButton>
					<gwt:radioButton name="color" onChange="textAreaController.handleError" id="error" text="Error"></gwt:radioButton>
				</div>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="Text Area">
			<showcase:description>
				<p>
					Text Area é um campo de texto multi-linha, que poder ser definido por número de linhas e número máximo de caracteres (maxLength). 
				</p>
				<p>
					Neste exemplo o número máximo de caracteres se inicia em 150, insira um novo número, clique em aplicar e faça o teste.
				</p>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>