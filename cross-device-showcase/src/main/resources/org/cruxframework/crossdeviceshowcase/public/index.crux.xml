			<crux:menuEntry label="${messages_showcase.textArea}" targetView="textArea"/>
			<crux:menuEntry label="${messages_showcase.textBox}" targetView="gwtTextBox"/>
			<crux:menuEntry label="${messages_showcase.singleSelect}" targetView="singleSelect"/>
			
			<crux:menuSection label="${messages_showcase.menuElements}" />
			<crux:menuEntry label="${messages_showcase.topMenuDisposal}" targetView="topMenuDisposal"/>
			<crux:menuEntry label="${messages_showcase.stackMenu}" targetView="stackMenu"/>
			
