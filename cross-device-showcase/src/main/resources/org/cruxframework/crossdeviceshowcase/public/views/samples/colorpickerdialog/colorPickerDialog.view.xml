<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="colorPickerDialogController" 
	onLoad="colorPickerDialogController.onLoad"
	title="Color Picker Dialog"> 
	
	<center>
		<gwt:verticalPanel id="panel">
			<gwt:label id="labelText" text="Click in button and change text color"/>
			<gwt:label id="labelColor" text="Choosed color:"/>
			<crux:button id="button" text="Mudar Cor" onSelect="colorPickerDialogController.callColorPicker"/>
		</gwt:verticalPanel>	
			<crux:colorPickerDialog id="colorPickerDialog" text="Choosed color" onClose="colorPickerDialogController.changeColor"/>		
		
		<showcase:info title="ColorPickerDialog">
			<showcase:description>
				<p>
					O Color Picker é um componente que permite que o usuário selecione uma cor do espectro de cores. A funcionalidade é semelhante selecionadores de cores encontrados em softwares desktop.
				</p>
			</showcase:description>
		</showcase:info>
		
	</center>		
	
</v:view>