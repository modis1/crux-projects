<v:view xmlns="http://www.w3.org/1999/xhtml" xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="colorPickerDialogController" title="${messages_colorPickerDialog.title}">

	<center>
		<gwt:verticalPanel id="panel">
			<gwt:label id="labelClickButton"
				text="${messages_colorPickerDialog.labelClickButton}" />
			<gwt:label id="labelColorValue"
				text="${messages_colorPickerDialog.labelColorValue}" />
			<crux:button id="buttonChangeColor"
				text="${messages_colorPickerDialog.title}"
				onSelect="colorPickerDialogController.showColorPicker" />
		</gwt:verticalPanel>
		<crux:colorPickerDialog id="colorPicker"
			text="${messages_colorPickerDialog.colorPickerText}" onClose="colorPickerDialogController.changeColor" />

		<showcase:info title="${messages_colorPickerDialog.title}">
			<showcase:description>
				<gwt:label id="labelDescText"
					text="${messages_colorPickerDialog.labelDescText}" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>