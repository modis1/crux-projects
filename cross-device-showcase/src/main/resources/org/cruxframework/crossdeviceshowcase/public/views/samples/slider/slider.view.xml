<v:view xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="sliderController" 
	onLoad="sliderController.onLoad"
	title="${messages_slider.title}">
	
	<center>
	
	<crux:styledPanel id="sliderPanel">
    		<crux:slider id="slider" width="500px" height="250px">
<!--     		WELCOME -->
    			<crux:widget>
    				<gwt:HTMLPanel id="panelWelcome" styleName="sliderPanel">
    					<gwt:label id="labelWelcome" text="${messages_slider.labelWelcome}"/>
    					<br />
    					<gwt:label id="labeNext" text="${messages_slider.labeNext}"/>
    				</gwt:HTMLPanel>
    			</crux:widget>
<!--     			PERSONAL -->
    			<crux:widget>
    				<gwt:HTMLPanel id="panelPersonalData">
	    				<gwt:label id="labelPersonal" text="${messages_slider.labelPersonal}"/>
	    				 <br />
		    				<crux:formDisplay id="formPersonalData">
								<crux:entry label="${messages_slider.personalName}">
									<gwt:textBox id="textBoxName" width="250px"/>
								</crux:entry>
								<crux:entry label="${messages_slider.personalAge}">
									<crux:numberTextBox id="numberBoxAge" maxLength="2" width="50px"/>
								</crux:entry>
								<crux:entry label="${messages_slider.personalPhone}">
									<gwt:horizontalPanel id="panelPhone">
										<crux:numberTextBox id="numberCodPhone" maxLength="3" width="50px" style="margin-right:5px;"/>
										<crux:numberTextBox id="numberInitPhone" width="90px" style="margin-right:5px;"/>
										<crux:numberTextBox id="numberFinalPhone" width="90px" style="margin-right:5px;"/>
									</gwt:horizontalPanel>	
								</crux:entry>
							</crux:formDisplay>
					</gwt:HTMLPanel>		
    			</crux:widget>
<!--     			PROFESSIONAL -->
    			<crux:widget>
    				<gwt:HTMLPanel id="panelProfessionalData" >
    					<gwt:label id="labelProfessional" text="${messages_slider.labelProfessional}"/>
    					 <br />
    						<crux:formDisplay id="formProfessionalData">
								<crux:entry label="${messages_slider.profession}">
									<gwt:textBox id="textBoxProfession" width="250px"/>
								</crux:entry>
								<crux:entry label="${messages_slider.labelExperience}">
									<gwt:HTMLPanel id="panelExperience">
										<crux:numberTextBox id="numberTimeExperience" maxLength="2" width="50px"/>
										<gwt:radioButton id="radioButtonYears" name="timeExperience" text="${messages_slider.radioYears}" checked="true"/>
										<gwt:radioButton id="radioButtonMonths" name="timeExperience" text="${messages_slider.radioMonths}"/>
									</gwt:HTMLPanel>
								</crux:entry>
							</crux:formDisplay>
    				</gwt:HTMLPanel>
    			</crux:widget>
<!--     			FINISH -->
    			<crux:widget>
    				<gwt:HTMLPanel id="panelFinish" >
    					<gwt:label id="labelCheckData" text="${messages_slider.labelCheckData}"/>
    					<gwt:HTML id="htmlResult"/>
    					<gwt:label id="labelFinish" text="${messages_slider.labelFinish}"/>
    				</gwt:HTMLPanel>
    			</crux:widget>
    			
			</crux:slider>
		</crux:styledPanel>
		
		<gwt:horizontalPanel id="panelButtons">
		<crux:button id="btnCancel" text="${messages_slider.btnCancel}" onSelect="sliderController.cancel"/>
		<crux:button id="btnPrevious" text="${messages_slider.btnPrevious}" onSelect="sliderController.previous"/>
		<crux:button id="btnNext" text="${messages_slider.btnNext}" onSelect="sliderController.next"/>
		<crux:button id="btnFinish" text="${messages_slider.btnFinish}" onSelect="sliderController.finish"/>
		</gwt:horizontalPanel>

		<showcase:info title="${messages_slider.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>
 
</v:view>