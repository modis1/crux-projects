<v:view xmlns="http://www.w3.org/1999/xhtml" xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="sliderController" onLoad="sliderController.onLoad"
	title="Slider">


    <style type="text/css">
	    .crux-Slider .leftArrow, .crux-Slider .rightArrow 
		{
		  visibility: hidden;
		}
    </style>

	<gwt:flexTable id="menuMainTable" width="100%" height="100%" cellPadding="0" cellSpacing="0">
		<gwt:row>
			<gwt:cell>
				<gwt:widget>
					<crux:slider id="dasdasd" width="100%" visible="true" showFirstWidget="true">
						<crux:widget>
							<gwt:flexTable id="menuLojaMainTable" width="100%"
								cellPadding="1" cellSpacing="1" height="100%" styleName="menuTiles">
								<gwt:row>
									<gwt:cell width="25%" horizontalAlignment="center">
										<gwt:widget>
											<gwt:verticalPanel id="pesquisaClientePanel"
												spacing="3" style="background-color:rgb(0, 157, 175)" width="100%"
												height="100%">
												<gwt:image id="pesquisaClienteImagem"
													url="http://upload.wikimedia.org/wikipedia/commons/8/81/Sky_over_Washington_Monument.JPG"/>
												<gwt:label id="pesquisaClienteLabel"
													text="AAAAAAAAAA"
													styleName="Label" />
											</gwt:verticalPanel>
										</gwt:widget>
									</gwt:cell>
								</gwt:row>
							</gwt:flexTable>
						</crux:widget>
					</crux:slider>
				</gwt:widget>
			</gwt:cell>
		</gwt:row>
	</gwt:flexTable>

	<center>
		<crux:slider id="slider" circularShowing="true"
			slideTransitionDuration="500" showFirstWidget="true">
			<crux:widget>
				<crux:image id="teste1"
					url="http://t2.gstatic.com/images?q=tbn:ANd9GcT3KAwosCPL5T_AsZm9Si62_hFfkou2BgWLO9o2GjHCAXhfodVh" />
			</crux:widget>

			<crux:widget>
				<crux:image id="teste2"
					url="http://t1.gstatic.com/images?q=tbn:ANd9GcQlqajilmRT_LnaY4L23nmEu6YBjMzVt6-EqN1M5yvEKcHqWcxV" />
			</crux:widget>
		</crux:slider>
		<gwt:label id="labelCount" />
		<gwt:label id="widgetNumber" />

		<showcase:info title="Slider">
			<showcase:description>
				<p>
					O componente Slider é um painel que realiza troca de
					conteúdo usando animações com efeito de slide.
				</p>
				<p>

				</p>
			</showcase:description>
		</showcase:info>

	</center>
 
</v:view>